    }
  ],
  "api_config": {
    "endpoint": "aiart.tencentcloudapi.com",
    "service_name": "智能创作引擎",
    "api_version": "2022-12-29",
    "doc_url": "https://cloud.tencent.com/document/product/1668/88066"
  },
  "parameters": {
    "strength": {
      "description": "风格强度",
      "type": "integer",
      "range": [0, 100],
      "default": 80,
      "note": "值越大风格效果越明显,建议范围 70-90"
    },
    "input_image": {
      "description": "输入图片",
      "format": "base64 或 URL",
      "max_size": "10MB",
      "supported_formats": ["JPG", "PNG", "JPEG", "WEBP"],
      "recommended_resolution": "1024x1024 到 2048x2048"
    },
    "rsp_img_type": {
      "description": "返回图片类型",
      "type": "string",
      "options": ["base64", "url"],
      "default": "base64",
      "note": "url 返回临时下载链接,有效期 1 小时"
    }
  },
  "rate_limits": {
    "qps": 5,
    "daily_quota": 1000,
    "note": "具体限额以腾讯云控制台为准,可申请提升配额"
  },
  "pricing": {
    "unit": "次",
    "free_tier": "每月 100 次",
    "paid_price": "0.1 元/次",
    "note": "价格仅供参考,以腾讯云官网为准"
  },
  "best_practices": [
    {
      "title": "图片质量要求",
      "description": "建议使用分辨率 1024x1024 以上的清晰图片,避免模糊或噪点过多"
    },
    {
      "title": "人脸识别优化",
      "description": "动漫和卡通风格对人脸效果最佳,建议人脸占比 > 30%"
    },
    {
      "title": "批量处理",
      "description": "使用异步任务队列处理,避免阻塞主线程"
    },
    {
      "title": "错误重试",
      "description": "网络异常建议重试 2-3 次,超时时间设置为 30 秒"
    },
    {
      "title": "成本控制",
      "description": "建议为用户设置每日调用次数限制,避免滥用"
    }
  ],
  "error_codes": [
    {
      "code": "FailedOperation.ImageDecodeFailed",
      "message": "图片解码失败",
      "solution": "检查图片格式是否正确,Base64 编码是否有误"
    },
    {
      "code": "FailedOperation.ImageResolutionExceed",
      "message": "图片分辨率过大",
      "solution": "压缩图片至 2048x2048 以下"
    },
    {
      "code": "FailedOperation.RequestTimeout",
      "message": "请求超时",
      "solution": "重试请求,或降低图片分辨率"
    },
    {
      "code": "LimitExceeded.TooLargeFileError",
      "message": "图片文件过大",
      "solution": "压缩图片至 10MB 以下"
    },
    {
      "code": "ResourceUsSuspended.InsufficientBalance",
      "message": "账户余额不足",
      "solution": "充值或检查账户状态"
    }
  ]
}
